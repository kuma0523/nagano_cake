<h1>ショッピングカート</h1>

<div>
  <% if @cart_items.customer == current_user %>
    <%= link_to "カートを空にする", destroy_all_cart_items_path(@cart_item), method: :delete %>
  <% end %>
</div>

<div>
  <% @cart_items.each do |cart_item| %>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th　clospan="1"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= image_tag cart_item.item.image %> <%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td><%= form_with model: @cart_item, url: cart_items_path do |f| %>
                  <%= f.select :amount, *[1..10] %>

              <%= f.submit '変更' %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal%></td>
          <td><% if @cart_item.customer == current_user %>
                <%= link_to "削除する", cart_item_path(@cart_item), method: :delete %>
              <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>