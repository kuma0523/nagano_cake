<h1>注文情報確認</h1>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>

    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>

          <td><%= image_tag cart_item.item.image %> <%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price%></td>
          <td></td>
          <td><%= cart_item.subtotal%></td>
              <% @total += cart_item.subtotal %>
          <% end %>
        </tr>

      </tbody>

  </table>