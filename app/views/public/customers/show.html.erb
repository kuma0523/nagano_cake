<h3>マイページ</h3>
<p><strong>登録情報</strong>　<%= link_to "編集する", information_edit_customers_path %></p>

<div>
  <table>
    <thead>
      <tr>
        <td>氏名</td>
        <td>カナ</td>
        <td>郵便番号</td>
        <td>住所</td>
        <td>電話番号</td>
        <td>メールアドレス</td>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
        <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
        <td><%= @customer.postal_code %></td>
        <td><%= @customer.address %></td>
