<h3>会員情報編集</h3>

<div>
  <%= form_with model: @customer, url: information_customers_path, method: :patch do |f| %>

  <div>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :first_name %>　<%= f.text_field :last_name %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>カナ</td>
      <td><%= f.text_field :first_name_kana %>　<%= f.text_field :last_name_kana %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
  </div>

  <div><%= f.submit "編集内容を保存" %></div>

  <div><%= link_to "退会する", unsubscribe_customers_path %></div>

  <% end %>

</div>
