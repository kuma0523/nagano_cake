<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h1>

<div>
  
   <div>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
  </div>

   <div>
    <tr>
      <td>氏名</td>
      <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
    </tr>
  </div>
        
   <div>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </div>
  
   <div>
    <tr>
      <td>会員ステータス</td>
      <td><%= @customer.is_deleted %></td>
    </tr>
  </div>
        
  <div><%= link_to "編集する", edit_admin_customer_path(@customer.id) %></div>

  <div><%= link_to "注文履歴一覧を見る", admin_root_path %></div>

</div>