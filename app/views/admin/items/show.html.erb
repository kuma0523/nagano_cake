<h1>商品詳細</h1>

<div><%= image_tag @item.image %> </div>

<div>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>商品説明</th>
        <th>税込価格<rb>(税抜価格)</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @item.name %></td>
        <td><%= @item.introduction %></td>
        <td><%= @item.price %>円</td>
      </tr>
    </tbody>
  </table>

  <div><%= link_to "編集する", edit_admin_item_path(@item.id) %></div>
</div>
